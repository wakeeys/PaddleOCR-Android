<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <!-- TextView: 识别图片 -->
    <TextView
        android:id="@+id/text_recognition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="识别图片"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"/>

    <!-- ImageView: 显示裁剪后的图片 -->
    <ImageView
        android:id="@+id/cropped_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_recognition"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@id/text_recognition"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"/>

    <!-- TextView: 裁剪结果 -->
    <TextView
        android:id="@+id/text_crop_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="识别结果"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/cropped_image"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@id/cropped_image"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:maxHeight="500dp"
        android:layout_below="@id/text_crop_result"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:layout_alignStart="@id/cropped_image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/resulted_image"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_alignStart="@id/text_recognition"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/resulted_image"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:scrollbars="vertical"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

